@model IEnumerable<CustomerViewModel>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "CustomerTable";
}

<h1>@Localizer["CustomerTable"]</h1>

<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr class="text-center">
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.FirstName)]
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.LastName)]
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.Address)]
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.PhoneNumber)]
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <a asp-action="CustomerUpdating" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">@Localizer["Edit"]</a>
                        <a asp-action="CustomerDeleting" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">@Localizer["Delete"]</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">@Localizer["NoRecordsFound"]</td>
            </tr>
        }

    </tbody>
</table>
@if (User.IsInRole("Admin"))
{
    <p align="right">
        <a asp-action="CustomerCreating" class="btn btn-sm btn-secondary">@Localizer["Create New"]</a>
    </p>
}