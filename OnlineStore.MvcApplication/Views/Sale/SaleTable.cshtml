@model IEnumerable<SaleViewModel>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "SaleTable";
}

<h1>@Localizer["SaleTable"]</h1>

@using (Html.BeginForm())
{
    <p>
        @Localizer["FindByName"] @Html.TextBox("SearchString")
        <input type="submit" value= @Localizer["Search"]>
    </p>
}

<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr class="text-center">
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.ProductName)]
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.CustomerName)]
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.DateOfSale)]
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.Amount)]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfSale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        <a asp-action="SaleUpdating" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">@Localizer["Edit"]</a>
                        <a asp-action="SaleDeleting"  asp-route-id="@item.Id" onclick="return confirm('@Localizer["Are you shure you want to delete this sale?"]')" class="btn btn-sm btn-secondary">@Localizer["Delete"]</a>
                    </td>
                </tr>
            }
        }
            else 
                {
            <tr>
                <td colspan="5" class="text-center">@Localizer["NoRecordsFound"]</td>
            </tr>
                }
    </tbody>
</table>

<p align="right">
    <a asp-action="SaleCreating" class="btn btn-sm btn-secondary">@Localizer["CreateNew"]</a>
</p>
