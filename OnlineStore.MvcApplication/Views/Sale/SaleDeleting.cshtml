@model OnlineStore.MvcApplication.Models.SaleViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["SaleDeleting"];
}

<h1>@Localizer["SaleDeleting"]</h1>

    <h3>@Localizer["Are you sure you want to delete this?"]</h3>
    <div>
        <h4>@Localizer["SaleViewModel"]</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfSale)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfSale)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
        </dl>

        <form asp-action="SaleDeleting">
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
            <a asp-action="SaleTable">@Localizer["Back to List"]</a>
        </form>
    </div>
