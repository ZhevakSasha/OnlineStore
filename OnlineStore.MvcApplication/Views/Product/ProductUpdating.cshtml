@model ProductViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["ProductUpdating"];
}

<h1>@Localizer["ProductUpdating"]</h1>

<h4>@Localizer["Product"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProductUpdating">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitOfMeasurement" class="control-label"></label>
                <input asp-for="UnitOfMeasurement" class="form-control" />
                <span asp-validation-for="UnitOfMeasurement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductTable">@Localizer["Back to List"]</a>
</div>

