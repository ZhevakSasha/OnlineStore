@model OnlineStore.MvcApplication.Models.ProductViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["ProductDeleting"];
}

<h1>@Localizer["ProductDeleting"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["ProductViewModel"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitOfMeasurement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitOfMeasurement)
        </dd>
    </dl>

    <form asp-action="ProductDeleting">
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="ProductTable">@Localizer["Back to List"]</a>
</form>
</div>
