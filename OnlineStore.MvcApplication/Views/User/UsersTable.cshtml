@model IEnumerable<OnlineStore.MvcApplication.Models.UserViewModel>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "UsersTable";
}

<h1>@Localizer["UsersTable"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="UserUpdating" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">@Localizer["Edit"]</a>
                    <a asp-action="UserDeleting" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
